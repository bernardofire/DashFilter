{
  "name": "DashFilter",
  "version": "1.0",
  "description": "Filter the alerts of your github dashboard",

  "browser_action": {
    "default_icon": "img/icon_19.png",
    "default_popup": "html/dashfilter_popup.html"
  },

  "background_page": "html/background_page.html",

  "content_scripts": [
    {
        "matches": ["https://github.com/(dashboard/yours)"],
        "js": ["js/jquery-1.7.1.min.js"]
    }
  ],

  "permissions": ["https://github.com/*", "contextMenus", "tabs"]
}
